{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "TypeScript Watch",
      "type": "shell",
      "command": "tsc --noEmit --watch",
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "ESLint Watch",
      "type": "shell",
      "command": "npx eslint . --ext .ts,.tsx,.js --watch",
      "isBackground": true,
      "problemMatcher": {
        "owner": "eslint",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^(.*):\\s+line\\s+(\\d+),\\s+col\\s+(\\d+),\\s+(error|warning)\\s+-\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ]
      }
    }
  ]
}
